#include "mysh.h"

char	*get_lined(char *line, char d)
{
  int	i;

  i = 0;
  if (line[0] == d)
    {
      while (line[0] && line[0] != ' ')
	line++;
      if (line[1])
	line++;
      return (line);
    }
  while (line[i])
    {
      if (line[i] == d)
	line[i] = 0;
      i++;
    }

}

char	*get_args(char *c, char d)
{
  int	i;
  char	*line;

  if ((line = my_strdup(c)) == NULL)
    return (NULL);
  i = 0;
  if (line[0] == d)
    {
      while (line[0] && line[0] == d)
	line++;
      while (line[i] != ' ')
        i++;
      line[i] = 0;
      return (line);
    }
  while (line[i] && line[i] != d)
    line++;
  while (line[i] && line[i] == d)
    line++;
  return (line);

}

char	*dr_red(char *line, t_cmd *cmd)
{
  int	i;
  char	*args;

  i = 0;
  cmd->redirect = 2;
  cmd->args = get_args(line, '>');
  return (get_lined(line, '>'));
}
